<div class="container">
    
    <div class="row justify-content-space-between w-100">

        <h2 class="h2"><%= @user.username %> created events</h1>


      <% @created_events.each do |event| %>
      <div class="card mb-3 col-md-4 mr-5">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><%= event.date %></p>
        <p class="card-text"><%= event.description %></p>
        <span><%= link_to 'More Details', event %></span>
              <span><%= link_to 'Attend Event', attendances_path(:attended_event_id => event), method: :post %></span>
      </div>
      </div>
      <% end %>


  </div>
    <div class="row justify-content-space-between w-100">

    
        <h2 class="h2">Upcoming Events</h1>

      <% @upcoming_events.each do |event| %>
      <div class="card mb-3 col-md-4 mr-5">
      <div class="card-body">
      <h5 class="card-title"><%= event.title %></h5>
      <p class="card-text"><%= event.date %></p>
      <p class="card-text"><%= event.description %></p>
      <span><%= link_to 'More Details', event %></span>
              <span><%= link_to 'Attend Event', attendances_path(:attended_event_id => event), method: :post %></span>
      </div>
      </div>
      <% end %>

      
  </div>

    <div class="row justify-content-space-between w-100">

          <h2 class="h2">Previous Attended Events</h1>


      <% @previous_events.each do |event| %>
      <div class="card mb-3 col-md-4 mr-5">
      <div class="card-body">
      <h5 class="card-title"><%= event.title %></h5>
      <p class="card-text"><%= event.date %></p>
      <p class="card-text"><%= event.description %></p>
      <span><%= link_to 'More Details', event %></span>
              <span><%= link_to 'Attend Event', attendances_path(:attended_event_id => event), method: :post %></span>
      </div>
      </div>
      <% end %>

    </div>
  
</div>
  